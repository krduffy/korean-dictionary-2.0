{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "lib": ["ES2023"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
     "@repo/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src"]
}
